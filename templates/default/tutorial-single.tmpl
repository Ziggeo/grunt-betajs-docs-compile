<div class="col-md-8">
	<div id="main">

	<?js function tut(tutorials, level) { ?>
		
		<section class="tutorial-section">
			<? if (tutorials.name && tutorials.title) { ?>
				<header id="<?js= tutorials.name ?>">
				<h<?js= level ?>><?js= tutorials.title ?></h<?js= level ?>>
				</header>
			<? } ?>
		
			<article>
			    <?js= tutorials.parse() ?>
			</article>
		</section>
		
		<?js tutorials.children.forEach(function(entry) { ?>
		    <?js tut(entry, level + 1); ?>
		<?js }); ?>
		
	<?js } ?>

	<?js tut(tutorials, 0); ?>

	</div>
</div>
		
<div class="clearfix">
</div>

<div class="col-md-3">
	<div id="toc" class="col-md-3 hidden-xs hidden-sm hidden-md"></div>
</div>

<script>
	$( "#toc" ).toc( {
		anchorName  : function ( i, heading, prefix ) {
			var id = $( heading ).attr( "id" );
			return id && id.replace(/\~/g, '-inner-').replace(/\./g, '-static-') || ( prefix + i );
		},
		selectors   : "#toc-content header>h1,#toc-content header>h2,#toc-content header>h3,#toc-content header>h4",
		showAndHide : false,
		smoothScrolling: true
	} );
</script>